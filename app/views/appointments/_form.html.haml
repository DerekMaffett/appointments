= form_for @appointment do |f|
  - if @appointment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@appointment.errors.count, "error")} prohibited this appointment from being saved:"
      %ul
        - @appointment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :doctor_id
    = f.collection_select(:doctor_id, @doctors, :id, :name)
  .field
    = f.label :patient_id
    = f.collection_select(:patient_id, @patients, :id, :name)
  .field
    = f.label :time
    = f.date_select :time
  .actions
    = f.submit 'Save'
